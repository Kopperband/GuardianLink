<h1> Volunteers</h1>
<div class="titles user-card last-card">
  <% @users.each do |user| %>
    <% if user.role == 'Volunteer' %>
      <div class="volunteer-card">
        <div class="group">
          <h5>First Name</h5>
          <li><strong><%= user.first_name %></strong></li>
        </div>
        <div class="group">
          <h5>Last Name</h5>
          <li><strong><%= user.last_name %></strong></li>
        </div>
        <div class="group">
          <h5>Email</h5>
          <li><%=mail_to user.point_of_contact_email, "Contact", class: "btn",subject: "#{current_user.first_name} wants to connect!", body: "Hello,\n   My name is #{current_user.first_name} and I believe I can help you with your cybersecurity issues.\n\n Please reply to this email if you are still looking for help"%></li>
        </div>
        <div class="group">
          <h5>Linkedin Page</h5>
          <li><%= link_to "Linkedin", user.linkedin, class: "btn" %></li>
        </div>
        <div class="group">
          <h5>Background Check?</h5>
          <% if user.background_check == true %>
            <li><strong>Yes</strong></li>
          <% else %>
            <li><strong>No</strong></li>
          <% end %>
        </div>
      </div>
      <div class="line"></div>
    <% end %>
  <% end %>
</div>
